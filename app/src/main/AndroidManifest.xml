<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.todolist.todolist">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/todo_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/todo_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.ToDoList">
        <activity android:name=".ui.TaskDescriptionActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".ui.DetailsActivity"  android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".ui.SplashActivity"  android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.AuthActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"
            />
        <activity android:name=".ui.MainActivity"
            android:windowSoftInputMode="stateHidden"/>
    </application>

</manifest>